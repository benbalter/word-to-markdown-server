<h2>Results of converting "<%= filename %>"</h2>

<div class="moar">
  <button id="copy-button" type="button" class="btn btn-outline-primary" data-clipboard-target="#markdown">Copy markdown to clipboard</button>
  <p class="mt-2">Want to <a href="/">convert another document</a>?</p>
</div>

<div class="row mt-3">
  <div class="col-6">
    <h3>Markdown</h3>
    <pre class="bg-light border text-start p-2 pre-scrollable"><code id="markdown" class="force-select-all"><%= html_escape md %></code></pre>
  </div>
  <div class="col-6">
    <h3>Rendered</h3>
    <div id="rendered" class="bg-light border text-start pre-scrollable py-1 px-2">
      <%= html %>
    </div>
  </div>
</div>